@model DoAnCNPM.Models.User

@{
    ViewData["Title"] = "Thêm Người dùng Mới";
    Layout = "_DashboardLayout";
}
<link rel="stylesheet" href="/css/quanli.css" />
<script src="/js/quanli.js"></script>
<h2 class="page-title">Thêm Người dùng Mới</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form method="post" action="/User/Create">
    <div class="form-group">
        <label for="Username">Tên đăng nhập:</label>
        <input type="text" id="Username" name="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
    </div>
    <div class="form-group">
        <label for="Password">Mật khẩu:</label>
        <input type="password" id="Password" name="Password" class="form-control" placeholder="Nhập mật khẩu" />
    </div>
    <div class="form-group">
        <label for="Role">Vai trò:</label>
        <select id="Role" name="Role" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Staff">Nhân viên</option>
            <option value="Customer">Khách hàng</option>
        </select>
    </div>
    <button type="submit" class="btn-submit">Thêm Người dùng</button>
</form>
