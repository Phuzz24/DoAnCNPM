@model IEnumerable<DoAnCNPM.Models.Category>

@{
    ViewData["Title"] = "Danh sách Loại sản phẩm";
    Layout = "_DashboardLayout";
}
<link rel="stylesheet" href="/css/quanli.css" />
<script src="/js/quanli.js"></script>

<h2 class="page-title">Danh sách Loại sản phẩm</h2>

<form method="get" action="@Url.Action("DSCategory")" class="search-form">
    <input type="text" name="searchTerm" placeholder="Tìm kiếm loại sản phẩm..." class="search-input" />
    <button type="submit" class="btn-search">Tìm kiếm</button>
</form>

<a href="@Url.Action("Create")" class="btn btn-add">Thêm loại sản phẩm mới</a>

<div class="table-container">
    <table class="table-products">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Loại sản phẩm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Category_ID</td>
                    <td>@category.CategoryName</td>
                    <td class="actions">
                        <a href="@Url.Action("Edit", "Category", new { id = category.Category_ID })" class="btn btn-warning">Sửa</a>
                        <button type="button" class="btn btn-danger delete-item" data-id="@category.Category_ID" data-url="@Url.Action("Delete", "Category")">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
