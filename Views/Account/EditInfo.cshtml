@{
    Layout = "_HomeLayout";
}

    @model DoAnCNPM.Models.UserInfoViewModel

    <head>
        <link rel="stylesheet" href="~/css/editinfo.css" />
        <script src="~/js/editinfo.js"></script>
    </head>

    <div class="user-info-container">
        <h2>Chỉnh sửa thông tin cá nhân</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" action="/Account/EditInfoPost">
            @Html.AntiForgeryToken()

            <div class="user-info-group">
                <label for="Username">Tên người dùng:</label>
                <input type="text" id="Username" name="Username" class="user-info-control" value="@Model.Username" readonly />
            </div>

            <div class="user-info-group">
                <label for="NameCus">Tên khách hàng:</label>
                <input type="text" id="NameCus" name="NameCus" class="user-info-control" value="@Model.NameCus" />
            </div>

            <div class="user-info-group">
                <label for="AddressCus">Địa chỉ:</label>
                <input type="text" id="AddressCus" name="AddressCus" class="user-info-control" value="@Model.AddressCus" />
            </div>

            <div class="user-info-group">
                <label for="PhoneCus">Số điện thoại:</label>
                <input type="text" id="PhoneCus" name="PhoneCus" class="user-info-control" value="@Model.PhoneCus" />
            </div>

            <div class="user-info-group">
                <label for="EmailCus">Email:</label>
                <input type="email" id="EmailCus" name="EmailCus" class="user-info-control" value="@Model.EmailCus" />
            </div>
            
            </div>

            <button type="submit" class="user-info-submit">Lưu thay đổi</button>
        </form>
    </div>








      

<style>
    /* Định dạng container chung */
    /* Container chung cho form */
    .user-info-container {
        max-width: 500px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 10px;
        background: linear-gradient(to bottom right, #ffffff, #f1f1f1);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

        .user-info-container h2 {
            text-align: center;
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: 600;
        }

    /* Thông báo */
    .alert {
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
        font-weight: bold;
        font-size: 14px;
    }

    .alert-success {
        background-color: #e7f5e7;
        color: #28a745;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #dc3545;
        border: 1px solid #f5c6cb;
    }

    /* Nhóm các mục nhập dữ liệu */
    .user-info-group {
        margin-bottom: 20px;
    }

        .user-info-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 5px;
            color: #555;
            font-size: 15px;
        }

    .user-info-control {
        width: 100%;
        padding: 10px;
        font-size: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
    }

        .user-info-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }

    /* Đổi mật khẩu */
    h3 {
        color: #333;
        font-size: 18px;
        margin-top: 30px;
        margin-bottom: 15px;
        font-weight: 500;
        text-align: center;
    }

    /* Nút Lưu thay đổi */
    .user-info-submit {
        display: block;
        width: 30%;
        margin: 10px auto;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(to right, #007bff, #0056b3);
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

        .user-info-submit:hover {
            background: linear-gradient(to right, #0056b3, #004080);
            transform: scale(1.03);
        }

    /* Hiệu ứng cho các trường mật khẩu */
    .user-info-group input[type="password"] {
        border: 1px solid #ffcccc;
    }

        .user-info-group input[type="password"]:focus {
            border-color: #ff6347;
            box-shadow: 0 0 8px rgba(255, 99, 71, 0.3);
        }


</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const newPasswordField = document.getElementById("NewPasswordField");
        const confirmNewPasswordField = document.getElementById("ConfirmNewPassword");

        newPasswordField.addEventListener("input", checkPasswordMatch);
        confirmNewPasswordField.addEventListener("input", checkPasswordMatch);

        function checkPasswordMatch() {
            const newPassword = newPasswordField.value;
            const confirmPassword = confirmNewPasswordField.value;

            if (newPassword !== "" && confirmPassword !== "" && newPassword !== confirmPassword) {
                confirmNewPasswordField.setCustomValidity("Mật khẩu xác nhận không khớp.");
            } else {
                confirmNewPasswordField.setCustomValidity("");
            }
        }
    });


</script>