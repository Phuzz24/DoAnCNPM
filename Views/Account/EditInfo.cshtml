<html>
<head>
    <link href="~/font/fontawesome-free-6.6.0-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="/js/main.js"></script>
    <title>Trang chủ</title>
</head>
<body>
    <div class="header">
        <div class="header-top">
            <div class="logo">
                <img src="~/HinhAnh/LOGO1.jpg" href="" />
            </div>
            <form>
                <div class="search-container">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" name="Timkiem" placeholder="Nhập sản phẩm bạn cần tìm..." />
                </div>
            </form>

            <a href="/Home/TrangChu">
                <i class="fa-solid fa-house"></i>
                Trang chủ
            </a>
            <a href="">
                <i class="fa-solid fa-circle-info"></i>
                Giới thiệu
            </a>
            <!-- Kiểm tra trạng thái đăng nhập từ Session -->
            @if (Context.Session.GetString("Username") != null)
            {
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" id="userDropdown">
                        <i class="fa-solid fa-user"></i> @Context.Session.GetString("Username")
                    </a>
                    <div class="dropdown-menu" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="/Account/EditInfo">Xem thông tin cá nhân</a>
                        <a class="dropdown-item" href="/Account/ChangePassword">Đổi mật khẩu</a>
                        <a class="dropdown-item" href="/Account/Logout">Đăng xuất</a>
                    </div>
                </div>
            }
            else
            {
                <a href="/Account/Login">
                    <i class="fa-solid fa-user"></i>
                    Đăng nhập
                </a>
            }
            <a href="">
                <i class="fa-solid fa-cart-shopping"></i>
                Giỏ hàng
            </a>
        </div>
        <div class="header-center">
            <hr />
        </div>
        <div class="header-bottom">
            <div class="slideshow-container">
                <!-- Slide 1 -->
                <div class="text-slide active">
                    Công nghệ trong tầm tay, đẳng cấp từng giây
                </div>
                <!-- Slide 2 -->
                <div class="text-slide">
                    Điện thoại chuẩn công nghệ, dịch vụ chuẩn niềm tin
                </div>
                <!-- Slide 3 -->
                <div class="text-slide">
                    Khám phá thế giới công nghệ di động
                </div>

                <!-- Chấm điều hướng -->
                <div class="dots">
                    <span class="dot active" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                </div>
            </div>
        </div>
    </div>

    @model DoAnCNPM.Models.UserInfoViewModel

    <div class="user-info-container">
        <h2>Chỉnh sửa thông tin cá nhân</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" action="/Account/EditInfoPost">
            @Html.AntiForgeryToken()

            <!-- Thông tin ẩn của User_ID và Customer_ID -->

            <div class="user-info-group">
                <label for="Username">Tên người dùng:</label>
                <input type="text" id="Username" name="Username" class="user-info-control" value="@Model.Username" readonly />
            </div>

            <div class="user-info-group">
                <label for="NameCus">Tên khách hàng:</label>
                <input type="text" id="NameCus" name="NameCus" class="user-info-control" value="@Model.NameCus" />
            </div>

            <div class="user-info-group">
                <label for="AddressCus">Địa chỉ:</label>
                <input type="text" id="AddressCus" name="AddressCus" class="user-info-control" value="@Model.AddressCus" />
            </div>

            <div class="user-info-group">
                <label for="PhoneCus">Số điện thoại:</label>
                <input type="text" id="PhoneCus" name="PhoneCus" class="user-info-control" value="@Model.PhoneCus" />
            </div>

            <div class="user-info-group">
                <label for="EmailCus">Email:</label>
                <input type="email" id="EmailCus" name="EmailCus" class="user-info-control" value="@Model.EmailCus" />
            </div>

            <!-- Đổi mật khẩu -->
            <h3>Đổi mật khẩu</h3>

            <div class="user-info-group">
                <label for="NewPasswordField">Mật khẩu mới:</label>
                <input type="password" id="NewPasswordField" name="NewPassword" class="user-info-control" />
            </div>

            <div class="user-info-group">
                <label for="ConfirmNewPassword">Xác nhận mật khẩu:</label>
                <input type="password" id="ConfirmNewPassword" name="ConfirmPassword" class="user-info-control" />
            </div>

            <button type="submit" class="user-info-submit">Lưu thay đổi</button>
        </form>
    </div>






        <div class="bottom">
            <div class="bottom-container">
                <div class="support-info">
                    <p><strong>Tổng đài</strong></p>
                    <p>Mua hàng: <a href="">1900.1900.00</a></p>
                    <p>Khiếu nại: <a href="">1900.1900.01</a></p>
                </div>
                <div class="social-icons">
                    <p><strong>Liên hệ với chúng tôi</strong></p>
                    <div class="icon">
                        <a href="#"><i class="fa-brands fa-facebook"></i></a>
                        <a href="#"><i class="fa-brands fa-youtube"></i></a>
                        <a href="#"><i class="fa-brands fa-google"></i></a>
                    </div>
                </div>
                <!-- Cột 2: Hệ thống cửa hàng -->
                <div class="footer-column">
                    <p><strong>Hệ thống cửa hàng</strong></p>
                    <ul>
                        <li><a href="#">Nội quy cửa hàng</a></li>
                        <li><a href="#">Chất lượng phục vụ</a></li>
                        <li><a href="#">Chính sách bảo hành & đổi trả</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Hỗ trợ khách hàng -->
                <div class="footer-column">
                    <p><strong>Hỗ trợ khách hàng</strong></p>
                    <ul>
                        <li><a href="#">Điều kiện giao dịch chung</a></li>
                        <li><a href="#">Hướng dẫn mua hàng online</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                    </ul>
                </div>

            </div>
        </div>

</body>
</html>