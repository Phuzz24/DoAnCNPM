@{
    Layout = "_HomeLayout";
}

    <div class="container">
        <div class="register-form">
            <h2>Đăng ký</h2>

            @* Hiển thị thông báo lỗi *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            @* Hiển thị thông báo đăng ký thành công *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form method="post" action="/Account/RegisterPost">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="Username">Tên người dùng:</label>
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Nhập tên người dùng" />
                    @Html.ValidationMessage("Username", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Nhập email" />
                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Password">Mật khẩu:</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Nhập mật khẩu" />
                    @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Xác nhận mật khẩu:</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                    @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn-submit">Đăng ký</button>

                <h3>Bạn đã có tài khoản?</h3>
                <a href="/Account/Login">Đăng nhập</a>
            </form>
        </div>
    </div>



        <
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            const password = document.getElementById('Password').value;
            const confirmPassword = document.getElementById('ConfirmPassword').value;

            if (password.length < 6) {
                e.preventDefault();
                alert('Mật khẩu phải có ít nhất 6 ký tự!');
            }

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không khớp!');
            }
        });

    </script>
