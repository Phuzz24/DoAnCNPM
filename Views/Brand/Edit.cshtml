@model DoAnCNPM.Models.Brand

@{
    ViewData["Title"] = "Chỉnh sửa Thương hiệu";
    Layout = "_DashboardLayout";
}

<h2>Chỉnh sửa Thương hiệu</h2>

<!-- Start of the form -->
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="Brand_ID" value="@Model.Brand_ID" />

    <div class="form-group">
        <label for="BrandName">Tên Thương hiệu</label>
        <input type="text" id="BrandName" name="BrandName" class="form-control" value="@Model.BrandName" required />

        <span class="text-danger">
            @if (ViewData.ModelState.ContainsKey("BrandName") && ViewData.ModelState["BrandName"].Errors.Count > 0)
            {
                <span>@ViewData.ModelState["BrandName"].Errors[0].ErrorMessage</span>
            }
        </span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
