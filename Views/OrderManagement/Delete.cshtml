@model DoAnCNPM.Models.Order
@{
    ViewData["Title"] = "Xóa Đơn hàng";
    Layout = "_DashboardLayout";

}
<link rel="stylesheet" href="/css/quanli.css" />
<script src="/js/quanli.js"></script>
<h2>Xóa Đơn hàng</h2>

<p>Bạn có chắc chắn muốn xóa đơn hàng này không?</p>

<div>
    <h4>Order ID: @Model.Order_ID</h4>
    <h4>Customer Name: @Model.CustomerName</h4>
</div>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn-delete">Xóa</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>
